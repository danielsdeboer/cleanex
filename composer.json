{
	"name": "danielsdeboer/cleanex",
	"type": "project",
	"description": "Test bed for clean-ish arch with Laravel.",
	"keywords": [
		"laravel",
		"framework"
	],
	"license": "MIT",
	"require": {
		"php": "^8.1",
		"ext-bcmath": "*",
		"ext-gmp": "*",
		"ext-json": "*",
		"guzzlehttp/guzzle": "^7.2",
		"laravel/framework": "^10.10",
		"laravel/tinker": "^2.8",
		"picocss/pico": "^1.5"
	},
	"require-dev": {
		"barryvdh/laravel-ide-helper": "^2.13",
		"fakerphp/faker": "^1.9.1",
		"mockery/mockery": "^1.4.4",
		"nunomaduro/collision": "^7.0",
		"phpunit/phpunit": "^10.1",
		"spatie/laravel-ignition": "^2.0"
	},
	"autoload": {
		"psr-4": {
			"Framework\\": "Framework/",
			"Application\\": "Application/"
		}
	},
	"scripts": {
		"test": "phpunit --no-coverage",
		"cover": "phpunit",
		"test-home": "phpunit --testsuite=home.web --no-coverage",
		"test-todos": "phpunit --testsuite=todos.web --no-coverage",
		"test-common": "phpunit --testsuite=common --no-coverage",
		"cover-home": "phpunit --testsuite=home.web",
		"cover-todos": "phpunit --testsuite=todos.web",
		"cover-common": "phpunit --testsuite=common",
		"post-autoload-dump": [
			"Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
			"@php artisan package:discover --ansi",
			"@php -r \"file_exists('Framework/public/css/pico.min.css') || copy('vendor/picocss/pico/css/pico.min.css', 'Framework/public/css/pico.min.css');\""
		],
		"post-update-cmd": [
			"@php artisan vendor:publish --tag=laravel-assets --ansi --force"
		],
		"post-root-package-install": [
			"@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
		],
		"post-create-project-cmd": [
			"@php artisan key:generate --ansi"
		],
		"setup": [
			"@php -r \"file_exists('Framework/public/css/pico.min.css') || copy('vendor/picocss/pico/css/pico.min.css', 'Framework/public/css/pico.min.css');\""
		]
	},
	"extra": {
		"laravel": {
			"dont-discover": []
		}
	},
	"config": {
		"optimize-autoloader": true,
		"preferred-install": "dist",
		"sort-packages": true,
		"allow-plugins": {
			"php-http/discovery": true
		}
	},
	"minimum-stability": "stable",
	"prefer-stable": true
}
